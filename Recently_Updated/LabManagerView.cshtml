@model GeoLab100.Models.Lab

@{
    ViewBag.Title = "LabManagerView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LabManagerView</title>
    <script type="text/javascript" src="~/Scripts/LabManager.js"></script>
</head>
<body>
    <div>
        <div class="modal fade" id="name-modal">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <div class="modal-title">
                            <h4>Enter Lab Name</h4>
                        </div>
                    </div>
                    <div class="modal-body">
                        <input type="text" class="form-control" id="lab-name" value="New Name" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary" data-dismiss="modal" id="btn-new-name">OK</button>
                    </div>
                </div>
            </div>   
        </div>
        <div class="modal fade" id="datetime-modal">
            <div class="modal-dialog modal-sm">
                <div class="modal-header">
                    <div class="modal-title">
                        <h4>Due Date</h4>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="input-group">
                        <input type="date" class="form-control" style="z-index:6000;" id="date-pick" value="" />
                        <span class="input-group-addon" data-toggle="modal" id="date-btn" style="cursor:pointer">
                            <span class="glyphicon glyphicon-calendar" />
                        </span>
                    </div>
                    <input class="form-control" id="input-time" value="11:59pm"/>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal" id="btn-no-date">No Due Date</button>
                    <button type="button" class="btn btn-primary" id="btn-datetime">OK</button>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <button type="button" id="create-lab-btn" class="btn btn-default" data-toggle="modal" data-target="#name-modal">+ Create Lab</button>
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th scope="col">Lab Key</th>
                    <th scope="col" />
                    <th scope="col" />
                    <th scope="col" />
                </tr>
            </thead>
            <tbody>
                <!---->
                <tr id="lab-0" hidden>
                    <th scope="row">
                    <a id="lab-name-0" style="cursor:pointer">New Lab</a></th>
                    <td><button class="btn btn-default" id="lab-publish-0">Unpublish</button></td>
                    <td><button class="btn btn-default" id="lab-due-0" data-toggle="modal" data-target="#datetime-modal">
                            <span class="glyphicon glyphicon-calendar"/>
                        </button></td>
                    <td><button class="btn btn-default" id="lab-remove-0">
                            <span class="glyphicon glyphicon-remove"></span>
                        </button></td>
                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>
