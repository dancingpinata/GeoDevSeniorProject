@model GeoLab100.Models.Lab

@{
    ViewBag.Title = "LabManagerView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section head {
<script type="text/javascript" src="~/Scripts/LabManager.js"></script>
}
<div>
    <div class="modal fade" id="name-modal">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="modal-title">
                        <h4>Enter Lab Name</h4>
                    </div>
                </div>
                <div class="modal-body">
                    <input type="text" class="form-control" id="lab-name" value="New Name" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal" id="btn-new-name">OK</button>
                </div>
            </div>
        </div>   
    </div>
    <div class="modal fade" id="datetime-modal">
        <div class="modal-dialog modal-sm">
            <div class="modal-header">
                <div class="modal-title">
                    <h4>Due Date</h4>
                </div>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-offset-2 col-sm-8">
                        <div>
                            Date:
                        </div>
                        <div class="input-group">
                            <input type="text" class="form-control" style="z-index:6000;" id="date-pick" value="" title="hh:mm"/>
                            <span class="input-group-addon" data-toggle="modal" id="date-btn" style="cursor:pointer">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-offset-2 col-sm-7">
                        <div>
                            Time:
                        </div>
                        <input type="time" class="form-control" id="input-time" value="11:59pm" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="input-group">
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal" id="btn-no-date">No Due Date</button>
                        <button type="button" class="btn btn-primary" id="btn-datetime">OK</button>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <button type="button" id="create-lab-btn" class="btn btn-default" data-toggle="modal" data-target="#name-modal">+ Create Lab</button>
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th scope="col">Lab Key</th>
                <th scope="col">Published</th>
                <th scope="col">Due Date</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <tr id="lab-0" hidden>
                <th scope="row">
                <a id="lab-name-0" style="cursor:pointer">New Lab</a></th>
                <td><button class="btn btn-default col-sm-6" id="lab-publish-0">Unpublished</button></td>
                <td><!--<button class="btn btn-default">-->
                        <div class="input-group" id="lab-due-0" data-toggle="modal" data-target="#datetime-modal" style="width: 100%;">
                            <span class="input-group-addon" name="span-due" style="width: 50%">No due date</span>
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    <!--</button>--></td>
                <td><button class="btn btn-default" id="lab-remove-0">
                        <span class="glyphicon glyphicon-remove"></span>
                    </button></td>
            </tr>
        </tbody>
    </table>
</div>